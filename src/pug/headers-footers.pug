		section.page-headers-footers__item
			h2.visually-hidden Образец footer
			footer.main-footer
				div.main-footer__top
					div.container
						div.main-footer__top-inner
							div.main-footer__logo-group
								a.main-footer__logo.logo(href="#")
									img.logo__icon(src="img/logo.svg" alt="Логотип Toxin")
